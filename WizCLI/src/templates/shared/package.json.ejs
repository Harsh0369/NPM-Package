{
  "name": "<%= projectName %>",
  "version": "1.0.0",
  "main": "src/server.<%= language === 'typescript' ? 'ts' : 'js' %>",
  "scripts": {
    <% if (language === 'typescript') { %>
    "start": "ts-node src/server.ts",
    "dev": "nodemon --exec \"ts-node --files src/server.ts\"",
    "build": "tsc",
    "start:prod": "npm run build && node dist/server.js",
    <% } else { %>
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    <% } %>
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": <%- JSON.stringify(dependencies, null, 2) %>,
  "devDependencies": <%- JSON.stringify(devDependencies, null, 2) %>
}